{% extends '@Wiki/base.html.twig' %}

{% block body %}
    <h3>
        Wiki:
        <a href="#">
            {{ wikiPage.wiki.name }}
        </a>
        /
        {{ wikiPage.name }}
    </h3>

    <div class="buttonbox" >
        {% if is_granted('ROLE_SUPERUSER') or readRole %}
            <a href="{{ path('wiki_page_index',{'wikiName':  wikiPage.wiki.name }) }}"  class="btn btn-primary" >
                <i class="fa fa-arrow-left" aria-hidden="true"></i>
                Back
            </a>
        {% endif %}
        {% if is_granted('ROLE_SUPERUSER') or writeRole %}
            <a href="{{ path('wiki_page_edit', {'wikiName':  wikiPage.wiki.name,'id': wikiPage.id }) }}" class="btn btn-success">
                <i class="fa fa-edit" aria-hidden="true"></i>
                Edit
            </a>
            <a href="{{ path('wiki_page_delete', {'wikiName':  wikiPage.wiki.name, 'id': wikiPage.id}) }}" class="btn btn-danger" onclick="return confirm('Are you sure?')">
                <i class="fa fa-edit" aria-hidden="true"></i>
                Delete
            </a>
        {% endif %}
    </div>

    <div class="col-md-12">
        {% markdown %}
            {{ wikiPage.content|raw }}
        {% endmarkdown %}
    </div>

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://highlightjs.org/static/demo/styles/{{ highlightJsTheme }}.css">
{% endblock %}
