{% extends '@Wiki/base.html.twig' %}

{% block body %}
    <h1>{% if wiki.id %} Edit {% else %} Add {% endif %} Wiki </h1>
    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-12">
                <fieldset>
                    <legend>Info</legend>
                      {{ form_widget(form) }}

                    <button class="btn btn-success">{{ button_label|default('Save') }}</button>
                    <a href="{{ path('wiki_index') }}"   class="btn btn-primary" >
                        <i class="fa fa-arrow-left" aria-hidden="true"></i>
                        Back
                    </a>
                </fieldset>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
